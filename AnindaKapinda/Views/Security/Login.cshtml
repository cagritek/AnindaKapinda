@model AnindaKapinda.Models.Security.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
</head>
<body>


    <partial name="_GuestNavbar" />
    <h2 style="text-align: center">Giriş Yap</h2>
    <hr />
    <form asp-controller="Security" asp-action="Login" method="post">
        <div style="width:30%;	text-align:center; margin:auto;  padding-top: 10px; padding-bottom:10px;">


            <div><h5 style="color:red;">@ViewBag.Mesaj</h5></div>
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group" style="padding-bottom: 15px; text-align:center; ">
                <label asp-for="Email" class="control-label">Kullanıcı Adı:</label>
                <input type="text" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <input class="btn btn-primary" type="submit" value="Giriş Yap" />


        </div>



    </form>
</body>
</html>
