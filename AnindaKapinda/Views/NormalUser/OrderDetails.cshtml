@model MarketOrderInfoViewModel

@{
    ViewData["Title"] = "OrderDetail";
}
@if (ViewBag.Message != null)
{
    <h6 style="color:red">@ViewBag.Message</h6>
}
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayName("Ad")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayName("Soyad")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Surname)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayName("Adres Tarifi")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AddressField)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayName("İlçe")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.District)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayName("İl")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayName("Sipariş Durumu")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>

            </dl>
        </div>
     

    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ürün Adı
                    </th>
                    <th>
                        Sipariş Adeti
                    </th>
                    <th ></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderInfoViewModels)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                </tr>
                }
            </tbody>
        </table>

    </div>
</div>
