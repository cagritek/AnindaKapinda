@model IEnumerable<AnindaKapinda.Models.PaymentMethod>

@{
    ViewData["Title"] = "PaymentMethods";
}

@if (ViewBag.Message != null)
{
    <h6 style="color:red">@ViewBag.Message</h6>
}
<br />
<hr />



<div class="row">
    <div class="col-md-3">
        @Html.Partial("_menuPartial")
    </div>
    <div class="col-md-9">
        <p>
            <a asp-action="AddPaymentMethod" class="btn btn-primary">Yeni Kart Ekle</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Kart Adı")
                    </th>
                    <th>
                        @Html.DisplayName("Kart Numarası")
                    </th>
                    <th>
                        @Html.DisplayName("Kullanım Durumu")
                    </th>
                    <th> </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                   
                    <td>
                        <a asp-action="EditPaymentMethod" asp-route-id="@item.PaymantMethodId"class="btn btn-primary">Düzenle</a>
                    </td>
                    <td>
                        <a asp-action="DeletePaymentMethod" asp-route-id="@item.PaymantMethodId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>
