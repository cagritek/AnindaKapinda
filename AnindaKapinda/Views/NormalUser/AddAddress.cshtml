@model AnindaKapinda.Models.Address

@{
    ViewData["Title"] = "AddAddress";
}

@if (ViewBag.Message != null)
{
    <h6 style="color:red">@ViewBag.Message</h6>
}
<br />
<hr />
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_menuPartial")
    </div>
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddAddress">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="AddressField" class="control-label">Adres Tarifi</label>
                        <textarea asp-for="AddressField" class="form-control"></textarea>
                        <span asp-validation-for="AddressField" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label">Şehir</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="control-label">İlçe</label>
                        <input asp-for="District" class="form-control" />
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayName("Geçerli mi?")
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
