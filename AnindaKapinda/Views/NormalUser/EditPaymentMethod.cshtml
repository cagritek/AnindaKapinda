@model AnindaKapinda.Models.PaymentMethod

@{
    ViewData["Title"] = "EditPaymentMethod";
}
@if (ViewBag.Message != null)
{
    <h6 style="color:red">@ViewBag.Message</h6>
}
<br />
<hr />


<div class="row">
    <div class="col-md-3">
        @Html.Partial("_menuPartial")
    </div>
    <div class="col-md-4">
        <form asp-action="EditPaymentMethod">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaymantMethodId" />

            <div class="form-group">
                <label asp-for="CardName" class="control-label">Kart Adı</label>
                <input asp-for="CardName" class="form-control" />
                <span asp-validation-for="CardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label">Kart Numarası</label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayName("Kullanımda mı?")
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
